
<CalculatorLayout>:
    orientation: "vertical"
    spacing: 10
    padding: 10

    TextInput:
        id: display
        font_size: 32
        size_hint_y: 0.2
        multiline: False
        readonly: True
        background_color: 0,0,0,0.1
        foreground_color: 1,1,1,1

    GridLayout:
        cols: 4
        spacing: 10
        rows: 6

        Button:
            text: "C"
            on_press: root.clear()
        Button:
            text: "()"
            on_press: root.insert_text("()")
        Button:
            text: "%"
            on_press: root.insert_text("%")
        Button:
            text: "/"
            on_press: root.insert_text("/")

        Button:
            text: "7"
            on_press: root.insert_text("7")
        Button:
            text: "8"
            on_press: root.insert_text("8")
        Button:
            text: "9"
            on_press: root.insert_text("9")
        Button:
            text: "*"
            on_press: root.insert_text("*")

        Button:
            text: "4"
            on_press: root.insert_text("4")
        Button:
            text: "5"
            on_press: root.insert_text("5")
        Button:
            text: "6"
            on_press: root.insert_text("6")
        Button:
            text: "-"
            on_press: root.insert_text("-")

        Button:
            text: "1"
            on_press: root.insert_text("1")
        Button:
            text: "2"
            on_press: root.insert_text("2")
        Button:
            text: "3"
            on_press: root.insert_text("3")
        Button:
            text: "+"
            on_press: root.insert_text("+")

        Button:
            text: "+/-"
            on_press: root.insert_text("-")
        Button:
            text: "0"
            on_press: root.insert_text("0")
        Button:
            text: "."
            on_press: root.insert_text(".")
        Button:
            text: "="
            on_press: root.calculate(display.text)

        Button:
            text: "sin"
            on_press: root.insert_text("sin(")
        Button:
            text: "cos"
            on_press: root.insert_text("cos(")
        Button:
            text: "tan"
            on_press: root.insert_text("tan(")
        Button:
            text: "√"
            on_press: root.insert_text("sqrt(")

        Button:
            text: "log"
            on_press: root.insert_text("log(")
        Button:
            text: "^"
            on_press: root.insert_text("**")
        Button:
            text: "π"
            on_press: root.insert_text("pi")
        Button:
            text: "e"
            on_press: root.insert_text("e")
